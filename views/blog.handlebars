<div class="flex flex-row mb-4 p-6 shadow-lg bg-gray-50">
  <div class="rounded overflow-hidden shadow-lg blog-item bg-gray-100">
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2 px-2 bg-gray-500 text-white">
        {{title}}
      </div>
      <p class="text-gray-700 text-base">
        {{description}}
      </p>
    </div>
    {{#each blogcomments}}
      <div class="px-6 pt-4 mb-2 flex-col">
        {{! <label for="blog_comment">Comment</label> }}
        <div class="bg-gray-200 rounded-full px-2">
          <p class="text-lg">{{comment}}</p>
        </div>
        <span
          class="inline-block bg-gray-200 rounded-full py-1 font-semibold text-gray-700 mb-2 text-xs"
        >Created by
          {{comment_author.username}}
          on
          {{format_date date_created}}</span>
      </div>
    {{/each}}
    <hr class="my-3" />
    <div class="px-6 pb-2 w-full">
      <label for="blog_comment">Comment</label>
      <textarea
        id="blog_comment"
        rows="4"
        class="px-0 w-full text-sm text-gray-900 bg-white border-0 dark:bg-gray-800 focus:ring-0 dark:text-white dark:placeholder-gray-400"
        placeholder="Write a comment..."
        required
      ></textarea>
    </div>
    <div class="px-6 pt-4 pb-2">
      <span
        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
      >Created by {{user.username}} on {{format_date date_created}}</span>
    </div>
    <div class="flex justify-end">
      <button
        id="saveCommentBtn"
        data-id="{{id}}"
        type="button"
        class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700"
      >Submit</button>
    </div>
  </div>
</div>
<script src="/js/blog.js"></script>