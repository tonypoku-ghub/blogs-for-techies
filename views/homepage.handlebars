<div class="flex flex-row mb-4 p-6 shadow-lg bg-gray-50">
  <div class="flex flex-col">
    {{#each blogs as |blog|}}
      <div
        class="rounded overflow-hidden shadow-lg blog-item cursor-pointer my-1"
        data-id="{{id}}"
      >
        <div class="px-6 py-4 bg-gray-100">
          <div
            class="font-bold text-xl mb-2 px-2 bg-gray-500 text-white"
          >{{title}}</div>
          <p class="text-gray-700 text-base">
            {{description}}
          </p>
        </div>
        <div class="px-6 pt-4 pb-2 bg-gray-100">
          <span
            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
          >Posted By: {{blog_author.username}}</span>
          <span
            class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"
          >Date: {{format_date date_created}}</span>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<script src="js/homepage.js"></script>